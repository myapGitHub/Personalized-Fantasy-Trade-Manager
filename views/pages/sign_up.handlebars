<h1>Sign Up</h1>
    <div class="error" id="error">{{{ error }}}</div>

    <form id="server-form" method="post">
        <div>
            <label for="newUserName">Username:</label>
            <input  value="{{userName}}" name="newUserName" id="newUserName" type="text" placeholder="Create Username" required>
        </div>

        <div>
            <label for="newEmail">Email:</label>
            <input value="{{email}}" name="newEmail" id="newEmail" type="email" placeholder="Enter Email" required> 
        </div>

        <div>
            <label for="newPassword">Password:</label>
            <input name="newPassword" id="newPassword" type="password" placeholder="Create Password" required>
        </div>

        <div>
            <h2>Personal Info</h2>
            <label for="firstName">First Name:</label>
            <input id="firstName" name="firstName" type="text" value="{{firstName}}" placeholder="Enter First Name" required>
            <label for="lastName">Last Name:</label>
            <input id="lastName" name="lastName" type="text" value="{{lastName}}" placeholder="Enter Last Name" required>
            <label for="height">Height:</label>
            <input id="height" name="height" type="number" value="{{height}}" placeholder="Enter Height in Inches" required>
            <label for="weight">Weight:</label>
            <input id="weight" name="weight" type="number" value="{{weight}}" placeholder="Enter Weight in Pounds" required>
            <label for="age">Age:</label>
            <input id="age" name="age" type="number" value="{{age}}" placeholder="Enter Age" required>

            <label for="gender">Gender:</label>
            <select name="gender" id="gender">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select> 
        </div>

        <div>
            <h2>Current Gym Max</h2>
            <label for="benchMax">Bench Max:</label>
            <input value="{{benchMax}}" id="benchMax" name="benchMax" type="number" placeholder="Optional">
            <label for="squatMax">Squat Max:</label>
            <input value="{{squatMax}}" id="squatMax" name="squatMax" type="number" placeholder="Optional">
            <label for="deadliftMax">DeadLift Max:</label>
            <input value="{{deadLiftMax}}" id="deadliftMax" name="deadliftMax" type="number" placeholder="Optional">
        </div>

        <div>
            <h2>Training Experience</h2>
            <h4>Beginner: Less than 1 year</h4>
            <h4>Intermediate: 1-3 years</h4>
            <h4>Advanced: 3+ years</h4>
            <label for="training-experience">Experience:</label>
            <select id="training-experience" name="training-experience">
                <option value="beginner">Beginner</option>
                <option value="intermediate">Intermediate</option>
                <option value="advanced">Advanced</option>
            </select>
        </div>

        <div>
            <button type="submit">Setup Account</button>
        </div>
    </form>
    <script src="/public/js/signup.js"></script>
</body>