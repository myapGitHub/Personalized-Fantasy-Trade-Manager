<header>
    <nav>
        <a href="/dashboard">Home</a>
        <a>Profile</a>
        <a href="/signout">Logout</a>
        <a href="/workouts/workoutsPage">Workouts</a>
        <a href="/friends">Friends</a>
        <a href="/settings/account">Settings</a>
        <div>
            <form id="search-user-form" method="GET" action="/search-user">
                <label for="search-user">Search User:</label>
                <input id="currentUserId" name="currentUserId" type="hidden" value="{{userId}}">
                <input id="searchUser" name="searchUser" type="text" placeholder="type user">
            </form>
            <div id="search-user-error">{{{error}}}</div>
        </div>

    </nav>
</header>

{{#if empty}}
<div>
    <h2>NO USERS FOUND</h2>
</div>
{{else}}
    {{#if userIdArr}}
        <ul>
            {{#each userIdArr}}
                <li>
                    <a href="/search-user/{{this}}" data-id="{{this}}">{{this}}</a>
                </li>
            {{/each}}
        </ul>
    {{else}}
    <div>
        <h2>NO USERS FOUND</h2>
    </div>
    {{/if}}
{{/if}}




<script src="/public/js/dashboard.js"></script>
