<div id="insights">
  <h1>Workout Insights</h1>
  
  {{#if noWorkouts}}
    <div>
      <p>Create workouts to see your insights!</p>
      <a href="/workouts/createWorkout">Create Your First Workout</a>
    </div>
  {{else}}
    <div>
      <h2>Current Maxes</h2>
      <div>
        <p>Bench Press:</p>
        <p>{{currentMaxes.benchMax}}</p>
      </div>
      <div>
        <p>Squat:</p>
        <p>{{currentMaxes.squatMax}}</p>
      </div>
      <div>
        <p>Deadlift:</p>
        <p>{{currentMaxes.deadliftMax}}</p>
      </div>
    </div>
    <div>
      <h2>Differential from last workout</h2>
      <div>
        <p class="value">Projected {{mostRecentWorkout.type}}: {{mostRecentWorkout.projectedMax}}</p>
        
        {{!-- Conditional logic for positive/negative differential --}}
        {{#if (gt mostRecentWorkout.differential 0)}}
          <p class="differential" style="color: green;">+{{mostRecentWorkout.differential}}</p>
        {{else}}
          <p class="differential" style="color: red;">{{mostRecentWorkout.differential}}</p>
        {{/if}}
      </div>
      {{!-- <div>
        <p>Projected Squat:</p>
        <p class="value">{{projections.projSquatMax}}</p>
        <p class="differential {{#if (gt differentials.squat 0)}}positive{{else}}negative{{/if}}">
          {{#if (gt differentials.squat 0)}}+{{/if}}{{differentials.squat}}
        </p>
      </div>
      <div>
        <p>Projected Deadlift:</p>
        <p class="value">{{projections.projDeadliftMax}}</p>
        <p class="differential {{#if (gt differentials.deadlift 0)}}positive{{else}}negative{{/if}}">
          {{#if (gt differentials.deadlift 0)}}+{{/if}}{{differentials.deadlift}}
        </p>
      </div> --}}
      {{!-- <div>
        <p>Differentials:</p>
        <p>{{projections.projBenchMax}}</p>
      </div> --}}
    </div>
  {{/if}}
  
  <a href="/workouts/workoutsPage">Back to Workouts</a>
</div>
