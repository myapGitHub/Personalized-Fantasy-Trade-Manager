<nav>
    <a href="/signin" id="login-button">Login</a>
</nav>



    <form id="signup-form" method="post">
        <h1>Sign Up</h1>
        <div class="error" id="error">{{{ error }}}</div>
        <div>
            <label for="userId">Username:</label>
            <input value="{{userId}}" name="userId" id="userId" type="text" placeholder="Create Username" required>
        </div>

        <div>
            <label for="password">Password:</label>
            <input name="password" id="password" type="password" placeholder="Create Password" required>
        </div>

        <div>
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Retype Password" required>
        </div>

        <div>
            <h2>Personal Info</h2>
            <label for="firstName">First Name:</label>
            <input id="firstName" name="firstName" type="text" value="{{firstName}}" placeholder="Enter First Name" required>
            <label for="lastName">Last Name:</label>
            <input id="lastName" name="lastName" type="text" value="{{lastName}}" placeholder="Enter Last Name" required>
            <label for="height">Height:</label>
            <input id="height" name="height" type="number" value="{{height}}" placeholder="Enter Height in Inches" required>
            <label for="weight">Weight:</label>
            <input id="weight" name="weight" type="number" value="{{weight}}" placeholder="Enter Weight in Pounds" required>
            <label for="age">Age:</label>
            <input id="age" name="age" type="number" value="{{age}}" placeholder="Enter Age" required>

            <label for="gender">Gender:</label>
            <select name="gender" id="gender">
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select> 
        </div>

        <div>
            <h2>Current Gym Max</h2>
            <label for="benchMax">Bench Max:</label>
            <input value="{{benchMax}}" id="benchMax" name="benchMax" type="number" placeholder="Optional">
            <label for="squatMax">Squat Max:</label>
            <input value="{{squatMax}}" id="squatMax" name="squatMax" type="number" placeholder="Optional">
            <label for="deadLiftMax">DeadLift Max:</label>
            <input value="{{deadLiftMax}}" id="deadLiftMax" name="deadLiftMax" type="number" placeholder="Optional">
        </div>

        <div>
            <h2>Training Experience</h2>
            <p>Beginner: Less than 1 year</p>
            <p>Intermediate: 1-3 years</p>
            <p>Advanced: 3+ years</p>
            <label for="level">Experience:</label>
            <select id="level" name="level">
                <option value="beginner">Beginner</option>
                <option value="intermediate">Intermediate</option>
                <option value="advanced">Advanced</option>
            </select>
        </div>

        <div>
            <button type="submit" id="signup-button">Setup Account</button>
        </div>
    </form>
    <script src="/public/js/signup-signin.js"></script>
</body>
